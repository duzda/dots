#######################
### LAUNCH PROGRAMS ###
#######################
super + Return
	alacritty

super + shift + Return
	alacritty --class 'Alacritty-float,Alacritty-float'

super + e
	thunar

super + w
	vivaldi-stable

super + d
	~/.config/polybar/colorblocks/scripts/launcher.sh

super + shift + d # fullscreen - not implemented
	rofi -show drun

super + c
	code

super + n
	discord-canary

super + m
	deezer-enhanced

super + l + o
	betterlockscreen -l

super + {_,shift + }q
	bspc node -{c,k}

super + shift + space
	~/.config/scripts/toggle_kb

super + Escape
	pkill -USR1 -x sxhkd

## reload desktop
super + ctrl + shift + r
	bspc wm -r

alt + F4
	~/.config/polybar/colorblocks/scripts/powermenu.sh

ctrl + alt + F4
	shutdown now

##---------- System ----------##

# Take a screenshot
Print
	scrot 'Screenshot_%Y-%m-%d-%H-%M-%S.png' -e 'mv $f $$(xdg-user-dir PICTURES)/scrot;' # ; viewnior $$(xdg-user-dir PICTURES)/$f'
	
# Take current window
alt + Print	
	scrot -u 'Screenshot_%Y-%m-%d-%H-%M-%S.png' -e 'mv $f $$(xdg-user-dir PICTURES)/scrot;' #; viewnior $$(xdg-user-dir PICTURES)/$f'

# Take window
ctrl + Print	
	scrot -s 'Screenshot_%Y-%m-%d-%H-%M-%S.png' -e 'mv $f $$(xdg-user-dir PICTURES)/scrot;' #; viewnior $$(xdg-user-dir PICTURES)/$f'

# Take a screenshot in 5 second
shift + Print	
	scrot -d 5 'Screenshot_%Y-%m-%d-%H-%M-%S.png' -e 'mv $f $$(xdg-user-dir PICTURES)/scrot;' #; viewnior $$(xdg-user-dir PICTURES)/$f'
	
# Volume control
XF86Audio{RaiseVolume,LowerVolume}
	amixer set Master 5%{+,-}

XF86AudioMute
	amixer set Master toggle
	
# Music control
XF86Audio{Next,Prev,Play}
	playerctl {next,previous,play-pause}

# Replay song
alt + F7
	playerctl position 0

# Playerctl volume
alt + F10
	playerctl volume 0.05-

alt + F11
	playerctl volume 0.05+

######################
### WINDOW MANAGER ###
######################
## close or kill program
super + {_,shift + }q
    bspc node -{c,k}

##  fullscreen program
super + f
    bspc node -t {fullscreen,tiled}

## monocle layout
super + shift + f
	bspc desktop -l next

# Reload Keybindings
super + Escape
	pkill -USR1 -x sxhkd

# Split horizontal, vertical or cancel
super + {n,v,b}
	bspc node -p {east,south,cancel}

# Preselect the ratio
super + ctrl + shift + {1-9}
	bspc node -o 0.{1-9}

# Toggle beetwen floating & tiled
super + space
    bspc node -t "~"{floating,tiled}

# Pseudo Tiled & tiled mode
super + {p,t}
    bspc node -t {pseudo_tiled,tiled}

# Set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# Send the window to another edge of the screen
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Change focus to next window, including floating window
alt + {_,shift + }Tab
	bspc node -f {next.local,prev.local}

# Switch workspace
ctrl + alt + {h,l}
	bspc desktop -f {prev.local,next.local}

# Switch to last opened workspace
super + {Tab,grave}
	bspc {node,desktop} -f last

# Send focused window to another workspace
super + {_,ctrl + }{1-5}
	bspc {desktop -f,node -d} '^{1-5}'

# Send focused window to another workspace
super + {shift +, alt +}{1-5}
	bspc {desktop -f,node -d} '^{6-9, 10}'

# Expanding windows
super + alt + {h,l,k,j}
	bspc node -z {left -20 0,right 20 0,top 0 -20,bottom 0 20}
	
## Shrinking windows
super + ctrl + {h,l,k,j}
	bspc node -z {left 20 0,right -20 0,top 0 20,bottom 0 -20}
	
## Move floating windows
alt + shift + {h,j,k,l}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# swap the current node and the biggest node
super + g
	bspc node -s biggest.local

# focus the node in the given direction
super + {_, shift +} {h,j,k,l}
	bspc node -{f,s} {west,south,north,east}